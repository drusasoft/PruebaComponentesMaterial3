<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:text="Botones Material 3"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white">

            <Button
                android:id="@+id/btnElevado"
                style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Boton Elevado"
                android:textColor="@color/color_texto_pulsacion_botones"
                app:icon="@drawable/ic_icono_ejemplo"
                app:iconTint="@color/color_texto_pulsacion_botones"/>

            <Button
                android:id="@+id/btnFilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Boton Filled"
                app:rippleColor="@color/white"
                app:backgroundTint="@color/color_fondo_btn_filled"/>

            <Button
                android:id="@+id/btnTonal"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Bton Tonal"
                app:icon="@drawable/ic_icono_ejemplo"/>

            <Button
                android:id="@+id/btnOutline"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Boton Outline"
                android:textColor="@color/color_texto_pulsacion_botones"
                app:icon="@drawable/ic_icono_ejemplo"
                app:iconTint="@color/color_texto_pulsacion_botones"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="2dp"
                android:background="@color/purple_100"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ejemplo Troggle Buttons"
                android:textColor="@color/purple_700"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:singleSelection="true">

                <Button
                    android:id="@+id/toggleButton1"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boton 1"
                    android:textColor="@color/color_texto_pulsacion_botones"
                    app:rippleColor="@color/purple_100"
                    app:strokeColor="@color/purple_200"/>

                <Button
                    android:id="@+id/toggleButton2"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boton 2"
                    android:textColor="@color/color_texto_pulsacion_botones"
                    app:rippleColor="@color/purple_100"
                    app:strokeColor="@color/purple_200"/>

                <Button
                    android:id="@+id/toggleButton3"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boton 3"
                    android:textColor="@color/color_texto_pulsacion_botones"
                    app:rippleColor="@color/purple_100"
                    app:strokeColor="@color/purple_200"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>


            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleButtonIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:singleSelection="true">

                <Button
                    android:id="@+id/toggleButtonIcon1"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_texto_pulsacion_botones"
                    app:icon="@drawable/ic_btn1"
                    app:iconTint="@color/color_texto_pulsacion_botones"
                    app:rippleColor="@color/purple_100"
                    app:strokeColor="@color/purple_200"/>

                <Button
                    android:id="@+id/toggleButtonIcon2"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_texto_pulsacion_botones"
                    app:icon="@drawable/ic_btn2"
                    app:iconTint="@color/color_texto_pulsacion_botones"
                    app:rippleColor="@color/purple_100"
                    app:strokeColor="@color/purple_200"/>

                <Button
                    android:id="@+id/toggleButtonIcon3"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_texto_pulsacion_botones"
                    app:icon="@drawable/ic_btn3"
                    app:iconTint="@color/color_texto_pulsacion_botones"
                    app:rippleColor="@color/purple_100"
                    app:strokeColor="@color/purple_200"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="2dp"
                android:background="@color/purple_100"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Ejemplo Botones Bordes Recortados"
                android:textColor="@color/purple_700"/>

            <Button
                android:id="@+id/btnEsquinasRecortadas"
                style="@style/Widget.App.Button.OutlinedButton.EsquinasRecortadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esquinas Recortadas"
                android:textColor="@color/color_texto_pulsacion_botones"
                app:rippleColor="@color/purple_100"
                app:strokeColor="@color/purple_200"/>

            <Button
                android:id="@+id/btnExagonal"
                style="@style/Widget.App.Button.OutlinedButton.FormaExagonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forma Exagonal"
                android:textColor="@color/color_texto_pulsacion_botones"
                app:backgroundTint="@color/purple_100"
                app:rippleColor="@color/white"
                app:strokeColor="@color/purple_200"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>