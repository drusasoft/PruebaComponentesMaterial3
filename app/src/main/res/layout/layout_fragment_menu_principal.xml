<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtOpcionBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Prueba Botones"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/color_texto_pulsacion"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOpcionNavigationBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Prueba NavigationBar"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/color_texto_pulsacion"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOpcionBotones" />

    <TextView
        android:id="@+id/txtOpcionNavigationRail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Prueba NavigationRail"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/color_texto_pulsacion"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOpcionNavigationBar" />

</androidx.constraintlayout.widget.ConstraintLayout>