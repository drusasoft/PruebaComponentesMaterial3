<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.PruebaComponentesMaterial3" parent="Theme.Material3.DayNight.NoActionBar"> <!-- <style name="Theme.PruebaComponentesMaterial3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!--Color de fondo para todas las pantallas-->
        <item name="android:windowBackground">@color/purple_50</item>

    </style>
    
    <!--Stilos para Toolbar-->
    <style name="mToolBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/purple_500</item>
    </style>
    
    <style name="mToolbarTextSyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/plaster</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Estilo Para que los Botonoies solo muesten el Icono -->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Estilo boton Esquinas recortadas -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.EsquinasRecortadas" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <!--Estilo Boton forma Exagonal -->
    <style name="ShapeAppearance.App.SmallComponent2" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">19dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.FormaExagonal" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent2</item>
    </style>


    <!-- ERstilo Barra Progreso Circular-->
    <style name="barraProgresoCircularTuneada" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackThickness">20dp</item>
        <item name="indicatorColor">@color/purple_100</item>
    </style>


</resources>